<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".userpanel.PerfilActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header con informaci贸n del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_box"
                android:elevation="8dp"
                android:layout_marginBottom="20dp"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuraci贸n del perfil"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_principal"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal" />

                <!-- Contenedor horizontal para foto e informaci贸n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Foto del lado izquierdo -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageViewProfile2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/user"
                        app:civ_border_width="3dp"
                        app:civ_border_color="@color/verde_principal"
                        android:contentDescription="Imagen de perfil"
                        android:elevation="6dp"
                        android:layout_marginEnd="20dp" />

                    <!-- Informaci贸n del lado derecho -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuario"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/verde_principal"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/textViewUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="usuario@email.com"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/textViewUserCarrera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrera: Ingenier铆a en Sistemas"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/textViewUserNumControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N煤mero de Control: 12345678"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/textViewUserEdad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edad: 22 a帽os"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Secci贸n: Informaci贸n Personal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_box"
                android:elevation="8dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/informacion_personal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_principal"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Opci贸n: Editar Perfil -->
                <LinearLayout
                    android:id="@+id/optionEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_edit_24"
                        app:tint="@color/verde_principal"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Editar Informaci贸n Personal"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modifica tu nombre, carrera, edad, etc."
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:rotation="180"
                        app:tint="@color/dark_gray" />

                </LinearLayout>

                <!-- Opci贸n: Actualizar Llavero NFC -->
                <LinearLayout
                    android:id="@+id/optionUpdateNfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_nfc_24"
                        app:tint="@color/verde_principal"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actualizar Llavero NFC"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cambiar llavero para reciclar"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:rotation="180"
                        app:tint="@color/dark_gray" />

                </LinearLayout>

                <!-- Opci贸n: Ver NIP (solo para usuarios sin NFC) -->
                <LinearLayout
                    android:id="@+id/optionVerNip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_lock_24"
                        app:tint="@color/verde_principal"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mi NIP"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textViewNip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIP: --------"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:rotation="180"
                        app:tint="@color/dark_gray" />

                </LinearLayout>
            </LinearLayout>

            <!-- Secci贸n: Logros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_box"
                android:elevation="8dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Logros"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_principal"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Opci贸n: Ver Logros -->
                <LinearLayout
                    android:id="@+id/optionVerLogros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_area_chart_24"
                        app:tint="@color/verde_principal"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Mis Logros"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descubre tus logros y estad铆sticas"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:rotation="180"
                        app:tint="@color/dark_gray" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegaci贸n inferior modernizada -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_item_tint"
        app:itemTextColor="@color/bottom_nav_item_tint"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
