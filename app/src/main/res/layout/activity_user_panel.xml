<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserPanel">

    <!-- Contenido principal fijo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header modernizado -->
        <include
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- SecciÃ³n de categorÃ­as -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- TÃ­tulo de secciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/verde_principal"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textCategoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Productos Disponibles"
                    android:textColor="@color/verde_principal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canjea tus puntos"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:background="@drawable/circle_light_bg"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Primera fila de tarjetas -->
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <!-- Tarjeta de CafÃ© -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/clothingCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_cafe"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/clothingImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/cafesito1"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/clothingName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CafÃ©"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â˜• Bebida caliente"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:alpha="0.8" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tarjeta de Desayuno -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/clothingCard2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_desayuno"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/elecImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/desayuno"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/elecName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desayuno"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ³ Comida matutina"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:alpha="0.8" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Segunda fila de tarjetas -->
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Tarjeta de Comida -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/clothingCard3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_comida"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/homeImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/comida"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/homeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comida"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ½ï¸ Plato principal"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:alpha="0.8" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tarjeta de Refresco -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/clothingCard4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_refresco"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/beautyImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/refresco"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/beautyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refresco"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥¤ Bebida frÃ­a"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:alpha="0.8" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- BotÃ³n de MÃ¡s Productos -->
            <Button
                android:id="@+id/btnMasProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÃ¡s Productos"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:letterSpacing="0.05"
                android:background="@drawable/green_button_background"
                android:drawablePadding="8dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>
    </LinearLayout>

    <!-- Barra de navegaciÃ³n inferior modernizada -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_item_tint"
        app:itemTextColor="@color/bottom_nav_item_tint"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
