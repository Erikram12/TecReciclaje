<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userpanel.DesayunoActivity">

    <!-- ScrollView que ocupa la mayor parte de la pantalla -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Reutilizando el encabezado -->
            <include
                layout="@layout/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Sección de categorías y tarjetas -->
            <TextView
                android:id="@+id/textCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="Producto seleccionado"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal"
                android:background="@color/white">

                <!-- Imagen del producto -->
                <ImageView
                    android:id="@+id/imageProducto"
                    android:layout_width="300dp"
                    android:layout_height="240dp"
                    android:src="@drawable/desayuno"
                    android:scaleType="centerCrop" />

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/textNombreProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Desayuno Completo"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!-- Descripción del producto -->
                <TextView
                    android:id="@+id/textDescripcionProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Deliciosa desayuno recién hecho, perfecta para empezar el día con energía."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <!-- Precio en puntos -->
                <TextView
                    android:id="@+id/textPrecioPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Costo: 500 pts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!-- Barra de progreso para los puntos -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:progress="50"
                    android:max="200"
                    android:progressDrawable="@drawable/progress_bar_custom" />

                <!-- Texto con los puntos actuales -->
                <TextView
                    android:id="@+id/textViewProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="100/500 pts"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnCanjear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:text="Canjear"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lavenderBtn"
        app:itemActiveIndicatorStyle="@style/Animation.Design.BottomSheetDialog"
        app:itemIconTint="@color/white"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>

