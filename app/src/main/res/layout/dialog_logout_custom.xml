<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@drawable/dialog_rounded_bg"
    android:elevation="8dp">

    <!-- Icono de cierre de sesión mejorado -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_accent_bg"
        android:gravity="center"
        android:elevation="2dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logout"
            android:contentDescription="Icono de cierre de sesión"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- Título mejorado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:alpha="0.95"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="Cerrar sesión"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Mensaje mejorado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:alpha="0.85"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="8dp"
        android:text="¿Estás seguro de que deseas cerrar sesión?"
        android:textColor="@color/secondary_text_color"
        android:textSize="16sp" />

    <!-- Contenedor de botones mejorado -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- Botón Cancelar mejorado -->
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Cancelar"
            android:textColor="@color/primary_text_color"
            android:background="@drawable/btn_outline_rounded"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:foreground="@drawable/btn_ripple_effect" />

        <!-- Botón Cerrar Sesión mejorado -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Cerrar sesión"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_danger_rounded"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:elevation="2dp"
            android:foreground="@drawable/btn_ripple_effect_white" />

    </LinearLayout>

    <!-- Contenedor de animación de carga mejorado -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:padding="16dp">

        <!-- ProgressBar mejorado -->
        <ProgressBar
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:indeterminateTint="@color/accent_color"
            style="@style/Widget.AppCompat.ProgressBar" />

        <!-- Texto de carga mejorado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrando sesión..."
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:alpha="0.9" />

        <!-- Texto secundario para la carga -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Por favor, espera un momento"
            android:textSize="13sp"
            android:textColor="@color/secondary_text_color"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:alpha="0.7" />

    </LinearLayout>

</LinearLayout>
