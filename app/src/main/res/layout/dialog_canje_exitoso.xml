<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Icono de éxito -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/check_circle_24dp_000000_fill0_wght400_grad0_opsz24"
        android:tint="#4c8479" />

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Canje Exitoso!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4c8479"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvMensajeExito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu vale ha sido generado correctamente.\n\nPodrás encontrarlo en la sección 'Mis Vales'."
        android:textSize="16sp"
        android:textColor="#616161"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón Cerrar -->
        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cerrar"
            android:textColor="#616161"
            android:background="@drawable/btnproductos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- Botón Ver Vale -->
        <Button
            android:id="@+id/btnVerVale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VER VALE"
            android:textColor="#4c8479"
            android:background="@drawable/btnproductos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>