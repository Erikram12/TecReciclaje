<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".userpanel.ProductoDetalleActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detalle del Producto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/verde_principal"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="40dp" />

        <Button
            android:id="@+id/btnAyuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            android:textColor="@color/white"
            android:background="@drawable/circle_light_bg"
            android:minWidth="40dp"
            android:minHeight="40dp" />

    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen del producto -->
            <ImageView
                android:id="@+id/ivImagenProducto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_light_bg"
                android:layout_marginBottom="24dp" />

            <!-- Información del producto -->
            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Nombre del Producto"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/verde_principal"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDescripcionProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Descripción del producto"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Precio en puntos -->
            <TextView
                android:id="@+id/textPrecioPuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="200 pts"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/green_button_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Sección de progreso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/circle_light_bg"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Tus Puntos"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textViewProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0 pts"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_principal"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:progressTint="@color/verde_principal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textProgresoDetallado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0/200"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>

            <!-- Botón de canjear -->
            <Button
                android:id="@+id/btnCanjear"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Canjear Producto"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/green_button_background"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_item_tint"
        app:itemTextColor="@color/bottom_nav_item_tint"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
