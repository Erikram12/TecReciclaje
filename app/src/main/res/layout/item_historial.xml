<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    style="@style/HistorialCardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <!-- Icono y color de fondo -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/iconoHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’°"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- InformaciÃ³n principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Cantidad de puntos -->
            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20 pts"
                android:textColor="@color/verde_principal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <!-- Fecha -->
            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/05/2025 07:23"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="4dp" />

            <!-- Producto (solo visible si hay producto) -->
            <TextView
                android:id="@+id/txtProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taza de cafÃ©"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Indicador de tipo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">

            <View
                android:id="@+id/indicadorTipo"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganado"
                android:textColor="@color/verde_principal"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/circle_light_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
