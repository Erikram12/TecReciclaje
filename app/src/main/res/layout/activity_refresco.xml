<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".userpanel.RefrescoActivity">

    <!-- Header modernizado -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_gradient"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- T铆tulo y bot贸n de regreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="@drawable/circle_white_bg"
                app:tint="@color/verde_principal"
                android:padding="8dp"
                android:contentDescription="Regresar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="イ Refresco"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <!-- Informaci贸n de puntos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntos Disponibles"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/textViewProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 pts"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/textPrecioPuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 pts"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/circle_light_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Imagen del producto con contenedor moderno -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imageProducto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/refresco"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <!-- Informaci贸n del producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/textNombreProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refresco (600ml)"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_principal"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <!-- Descripci贸n del producto -->
                <TextView
                    android:id="@+id/textDescripcionProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隆Refresca tu d铆a con nuestro delicioso refresco de 600ml! Disponible en m煤ltiples sabores. Perfecto para acompa帽ar tus comidas o simplemente disfrutarlo bien fr铆o."
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Barra de progreso moderna -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Progreso de puntos"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/textProgresoDetallado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100/150"
                        android:textSize="14sp"
                        android:textColor="@color/verde_principal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="67"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_custom" />

            </LinearLayout>

            <!-- Bot贸n de canjear modernizado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCanjear"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Canjear Producto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/verde_principal"
                android:textColor="@color/white"
                app:cornerRadius="16dp"
                app:elevation="4dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Barra de navegaci贸n inferior modernizada -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_item_tint"
        app:itemTextColor="@color/bottom_nav_item_tint"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>

