<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header del tutorial -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iconoProducto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/cafesito1"
                android:contentDescription="Icono de producto"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tituloTutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隆Bienvenido a Comida!"
                    android:textColor="@color/verde_principal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canjea tus puntos por deliciosos productos"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Contenido del tutorial -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Paso 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Verifica que tengas suficientes puntos para canjear"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Paso 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Toca el bot贸n 'Canjear' para obtener tu vale"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Paso 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ve a 'Mis Vales' para ver el c贸digo QR"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Informaci贸n adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_box"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Consejo"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los vales tienen una validez de 3 d铆as. 隆salos antes de que expiren!"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Bot贸n 煤nico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEntendido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button_background"
                android:padding="16dp"
                android:text="隆Entendido!"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="120dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
