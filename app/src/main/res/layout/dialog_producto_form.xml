<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header compacto para diálogo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_product"
                android:tint="@color/verde_principal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalles del Producto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121" />

        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="20dp" />

        <!-- Sección de Imagen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen del Producto"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Preview de imagen -->
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivImagenPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Vista previa de imagen del producto"
                    android:src="@drawable/placeholder_producto" />

            </FrameLayout>

            <!-- Botón para seleccionar imagen -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Seleccionar Imagen"
                android:textAllCaps="false"
                android:textColor="@color/verde_principal"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/verde_principal"
                app:strokeWidth="2dp"
                app:icon="@drawable/ic_camera"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconTint="@color/verde_principal"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <!-- Campo Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Taza de café, Desayuno, etc."
                app:startIconDrawable="@drawable/ic_product"
                app:startIconTint="@color/verde_principal"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/verde_principal"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/verde_principal"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingVertical="16dp"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Campo Descripción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del Producto *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe el producto (máx. 150 caracteres)"
                app:startIconDrawable="@drawable/ic_description"
                app:startIconTint="@color/verde_principal"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/verde_principal"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/verde_principal"
                app:counterEnabled="true"
                app:counterMaxLength="150"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="3"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingVertical="16dp"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Campo Precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio en Puntos *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 50, 100, 200..."
                app:startIconDrawable="@drawable/ic_points"
                app:startIconTint="@color/verde_principal"
                app:suffixText="puntos"
                app:suffixTextColor="@color/verde_principal"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/verde_principal"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/verde_principal"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrecioPuntos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingVertical="16dp"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="#757575"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#757575"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/verde_principal"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>