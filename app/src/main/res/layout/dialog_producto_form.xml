<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header compacto para diálogo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_product"
                android:tint="@color/verde_principal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalles del Producto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121" />

        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="20dp" />

        <!-- Sección de Imagen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen del Producto"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="12dp" />

            <!-- Preview de imagen -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/ivImagenPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/placeholder_producto" />

            </FrameLayout>

            <!-- Botón para seleccionar imagen -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Cargar Imagen"
                android:textAllCaps="false"
                android:textColor="@color/verde_principal"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/verde_principal"
                app:strokeWidth="1dp"
                app:icon="@drawable/ic_camera"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/verde_principal" />

        </LinearLayout>

        <!-- Campo Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre del producto"
            app:startIconDrawable="@drawable/ic_product"
            app:startIconTint="#757575"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/verde_principal"
            app:hintTextColor="@color/verde_principal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textSize="14sp"
                android:textColor="#212121" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Descripción"
            app:startIconDrawable="@drawable/ic_description"
            app:startIconTint="#757575"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/verde_principal"
            app:hintTextColor="@color/verde_principal"
            app:counterEnabled="true"
            app:counterMaxLength="150">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:minLines="2"
                android:gravity="top"
                android:textSize="14sp"
                android:textColor="#212121" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Precio -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Precio"
            app:startIconDrawable="@drawable/ic_points"
            app:startIconTint="#757575"
            app:suffixText="puntos"
            app:suffixTextColor="#757575"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/verde_principal"
            app:hintTextColor="@color/verde_principal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrecioPuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="14sp"
                android:textColor="#212121" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="100dp"
                android:layout_marginEnd="12dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="#757575"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="120dp"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/verde_principal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>