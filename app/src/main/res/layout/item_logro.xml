<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_box"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <!-- Header del logro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Icono del logro -->
        <ImageView
            android:id="@+id/imageViewLogroIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/baseline_area_chart_24"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_light_bg"
            android:padding="12dp"
            app:tint="@color/verde_principal" />

        <!-- InformaciÃ³n del logro -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewLogroTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo del Logro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewLogroDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n del logro"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginBottom="8dp" />

            <!-- Barra de progreso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/textViewLogroProgreso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Progreso: 0/10"
                        android:textSize="12sp"
                        android:textColor="@color/verde_principal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewLogroRecompensa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ† 50 pts"
                        android:textSize="14sp"
                        android:textColor="@color/orange"
                        android:textStyle="bold" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarLogro"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progressTint="@color/verde_principal"
                    android:progressBackgroundTint="@color/light_gray"
                    android:max="100"
                    android:progress="0" />

            </LinearLayout>

        </LinearLayout>

        <!-- Estado del logro -->
        <ImageView
            android:id="@+id/imageViewLogroEstado"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_lock_24"
            android:layout_marginStart="16dp"
            app:tint="@color/dark_gray" />

    </LinearLayout>

    <!-- BotÃ³n de reclamar (solo visible si estÃ¡ desbloqueado y no reclamado) -->
    <LinearLayout
        android:id="@+id/layoutBotonReclamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/buttonReclamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ Reclamar Puntos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/green_button_background"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Mensaje de ya reclamado -->
    <LinearLayout
        android:id="@+id/layoutYaReclamado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Puntos Reclamados"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/verde_principal" />

    </LinearLayout>

</LinearLayout>
