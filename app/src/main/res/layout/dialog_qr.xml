<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Header con título y botón cerrar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tu Código QR"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/verde_principal" />

        <ImageButton
            android:id="@+id/btnCerrarDialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_background"
            android:src="@drawable/close_24dp_000000_fill0_wght400_grad0_opsz24"
            android:contentDescription="Cerrar"
            android:padding="6dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muestra este código para canjear"
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Contenedor del QR con sombra -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qr_container_bg"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/qrImageView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

</LinearLayout>