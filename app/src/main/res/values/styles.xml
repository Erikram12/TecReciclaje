<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Estilo para el indicador activo de la navegación inferior -->
    <style name="BottomNavigationIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
        <item name="android:width">32dp</item>
        <item name="android:height">4dp</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <!-- Estilo para spinner con texto negro -->
    <style name="SpinnerTheme.BlackText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para tabs normales -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Estilo para tabs seleccionados -->
    <style name="TabTextAppearanceSelected" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para CardView del historial - siempre blanco -->
    <style name="HistorialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Estilo para RecyclerView del historial - siempre blanco -->
    <style name="HistorialRecyclerViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Estilos adicionales con fuente serif -->
    
    <!-- Estilo para navegación inferior -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo para tabs con fuente Nunito -->
    <style name="TabTextAppearanceSerif" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Estilo para tabs seleccionados con fuente Nunito -->
    <style name="TabTextAppearanceSelectedSerif" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para spinner con fuente Nunito -->
    <style name="SpinnerTheme.SerifText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>